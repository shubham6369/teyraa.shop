rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Products: Publicly readable, only Admins/Staff can edit
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Orders: 
    // 1. Customers can ONLY write (create) their own orders
    // 2. Admins can read/write all orders
    match /orders/{orderId} {
      allow create: if true; // Allow guests to place orders
      allow read, update, delete: if request.auth != null;
    }
    
    // Users/Settings: Strictly restricted to authenticated users
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }

    // Default deny for anything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
